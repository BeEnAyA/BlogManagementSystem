<!DOCTYPE html>
<html>
<title>My Blogs</title>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<script src="https://kit.fontawesome.com/2d2642681e.js" crossorigin="anonymous"></script>

<body>

    <!-- Navbar Start -->
    <div class="w3-bar w3-padding w3-amber" style="position: fixed;">
        <a href="/blog" class="w3-bar-item w3-button w3-round"><i class="fa-solid fa-blog"></i> Blogs</a>
        <a href="/myBlogs" class="w3-bar-item w3-button w3-black w3-round"><i class="fa-solid fa-hand"></i> myBlogs</a>
        <a href="/create" class="w3-bar-item w3-button w3-round"><i class="fa-solid fa-circle-plus"></i> Add Blog</a>
        <!-- <a href="#" onclick=""><img src= style="width:60px; height:60px; border:1px solid rgb(250, 247, 247);border-radius:100%;" class="w3-right"></a> -->
        <a href="/logout" class="w3-bar-item w3-button w3-round w3-red w3-right"><i
                class="fa-solid fa-right-from-bracket"></i> Logout</a>
    </div>
   
            <div class="w3-container">
                <div class="w3-row-padding w3-margin-bottom" style="margin-top: 50px;">
                    <% myBlogs.forEach(blog => { %>
                      <div class="w3-col s4 l4 w3-margin-top w3-animate-opacity">
                        <div class="w3-card w3-white w3-round">
                          <div class="w3-container">
                            <div class="w3-container w3-center w3-padding-8 w3-border-bottom">
                              <p style="font-size: 20px; font-weight: bold">
                                <%= blog.title %>
                              </p>
                            </div>
                            <div class="w3-container w3-padding w3-center" style="height: 150px;">
                              <img src=<%= blog.image %> style="height:150px;">
                            </div>
                            <div class="w3-container w3-center w3-padding" style="height: 150px; overflow-y:scroll;">
                              <p><%= blog.description %></p>
                            </div>
              
                            <div class="w3-row-padding w3-border-top w3-padding-8">
                              <a href="/editNote/" class="w3-button w3-left w3-xlarge"><i
                                  class="fa-solid fa-pen-to-square" style="color: #049175f7"></i></a>
                              <a href="/deleteNote" class="w3-button w3-right w3-xlarge"><i class="fa-solid fa-trash"
                                  style="color: #b90707"></i></a>
                            </div>
                          </div>
                        </div>
                      </div>
                      <% }) %>
                  </div>
            </div>



</body>

</html>