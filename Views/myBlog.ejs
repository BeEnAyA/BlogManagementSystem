<!DOCTYPE html>
<html>
<title>My Blogs</title>
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<script src="https://kit.fontawesome.com/2d2642681e.js" crossorigin="anonymous"></script>

<body>
      <%- include('partials/navbar')%>
            <div class="w3-container">
                <div class="w3-row-padding w3-margin-bottom" style="margin-top: 50px;">
                    <% myBlogs.forEach(blog => { %>
                    <a href="/myBlogs/single/<%= blog.id %>" style="text-decoration: none;">
                      <div class="w3-col s4 l4 w3-margin-top w3-animate-zoom">
                        <div class="w3-card w3-white w3-round">
                          <div class="w3-container">
                            <div class="w3-container w3-center w3-padding-8 w3-border-bottom">
                              <p style="font-size: 20px; font-weight: bold">
                                <%= blog.title %>
                              </p>
                            </div>
                            <div class="w3-container w3-padding w3-center w3-border-bottom" style="height: 170px;">
                              <img src=<%= blog.image %> style="height:150px;">
                            </div>
                            <div class="w3-container w3-center w3-padding" style="height: 150px; overflow-y:scroll;">
                              <p><%= blog.description %></p>
                            </div>
              
                            <div class="w3-row-padding w3-border-top w3-padding-8">
                              <a href="/editBlog/<%=blog.id%>" class="w3-button w3-left w3-xlarge"><i
                                  class="fa-solid fa-pen-to-square" style="color: #049175f7"></i></a>
                              <a onclick="document.getElementById('deleteModal').style.display='block'" class="w3-button w3-right w3-xlarge"><i class="fa-solid fa-trash"
                                  style="color: #b90707"></i></a>
                            </div>
                          </div>
                        </div>
                      </div>
                    </a>

                    <!-- Modal that appears on clicking the delete button -->
                    <div id="deleteModal" class="w3-modal" >
                      <div class="w3-modal-content w3-card-4 w3-center w3-padding-16 w3-animate-top w3-round" style="width:30%">
                        <h5>Are you sure you want to delete?</h5>  
                      <a href="/deleteBlog/<%=blog.id%>" class="w3-button w3-green w3-round"><i class="fa-solid fa-check fa-beat"></i> Yes</a>
                      <button onclick="document.getElementById('deleteModal').style.display='none'" class="w3-button w3-red w3-round"><i class="fa-solid fa-x fa-beat"></i> No</button>
                      </div>
                  </div>
                      <% }) %>
                  </div>
            </div>

       
</body>

</html>


